<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Select"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"/>
    </LinearLayout>


    <TextView android:text="@string/quantityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/decremenQuantity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:onClick="decrementQuantity"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="-"/>

        <TextView android:id="@+id/quantity_text_view"
            android:text="@string/quantityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/incrementQuantity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:onClick="incrementQuantity"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="+"/>
    </LinearLayout>

    <TextView
        android:id="@+id/price_text_text_view"
        android:text="@string/price_text_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/price_text_view"
        android:text="@string/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/order_button"
        android:clickable="true"
        android:onClick="submitOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonText"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"/>

</LinearLayout>
